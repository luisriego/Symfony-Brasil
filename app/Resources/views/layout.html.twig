                <a class="hidden-xs" href="{{ path('homepage') }}">
                    <img id="header-logo-sticky" src="{{ asset('bundles/app/img/sf-positive.svg') }}" alt="Logomarca de Symfony">
                </a>
                {% if prefijo is not defined %}
