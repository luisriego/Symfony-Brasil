{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/all.css') }}">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    {#<link rel="stylesheet" href="{{ asset('bundles/app/css/mycss.css') }}">#}
    <script type="text/javascript" src="{{ asset('bundles/app/js/all.js') }}"></script>
    <link rel="apple-touch-icon" type="image/png" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="apple-touch-icon-precomposed" type="image/png" href="{{ asset('apple-touch-icon.png') }}">
{% endblock %}
{% block sensio %}
    <!--########## CABEZEIRA DE SENSIOLAB ############## -->
    <div id="sln" style="">
        <div class="sln-bar">
            <div class="sln-bar-inner">
                <div class="sln-network">
                    <a
                        href="https://sensiolabs.com/"
                        rel="nofollow"
                        target="_blank"
                        class="sln-hidden-phone">SensioLabs<span>Network</span>
                    </a>
                    <a href="https://sensiolabs.com/" class="sln-visible-phone" rel="nofollow" target="_blank">SL<span>N</span></a>
                </div>
                <div class="sln-ad">
                    <a href="https://insight.sensiolabs.com/" target="_blank" rel="nofollow" data-ga="sl_insight" class="sln-visible-phone">
                        <img src="{{ asset('bundles/app/img/1991a94e-4351-4af1-88ab-4f17f6d20f45.png') }} " alt="Sensiolab">SensioLabsInsight
                    </a>
                    <a href="https://insight.sensiolabs.com/" target="_blank" rel="nofollow" data-ga="sl_insight" class="sln-visible-tablet">
                        <img src="{{ asset('bundles/app/img/1991a94e-4351-4af1-88ab-4f17f6d20f45.png') }}" alt="Sensiolab">SensioLabsInsight: regain control of your PHP applications
                    </a>
                    <a href="https://insight.sensiolabs.com/" target="_blank" rel="nofollow" data-ga="sl_insight" class="sln-visible-desktop">
                        <img src="{{ asset('bundles/app/img/1991a94e-4351-4af1-88ab-4f17f6d20f45.png') }}" alt="Sensiolab">SensioLabsInsight: more than 100 quality checks to regain control of your PHP applications
                    </a>
                </div><!-- sln-ad }-->
                <div class="sln-search">
                    <div class="sln-search-deactivated">
                        <a href="#"><img src="{{ asset('bundles/app/img/search.png') }}"></a>
                    </div>
                    <div class="sln-search-activated sln-hidden">
                        <img src="{{ asset('bundles/app/img/search-alt.png') }}">
                    </div>
                </div>
                <div class="sln-user">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and usuario is defined  %}
                        <a class="sln-user-connected" href="{{ path('fos_user_security_logout') }}">
                            <img src="{{ asset('bundles/app/img/'~usuario.avatar) }}" width="30" height="30" alt="avatar">
                            <span class="sln-user-name sln-hidden-phone">{{ usuario.username }}</span>
                        </a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}" class="sln-connect"> Connect </a>
                    {% endif %}
                </div>

            </div><!-- class="sln-bar-inner" -->
        </div><!-- sln-bar -->
    </div><!-- #sln -->
    <!--########## FIM CABEZEIRA DE SENSIOLAB ##############-->
{% endblock %}
{% block menus %}
    <header>
        <div id="header-top" class="hidden-xs">
            <div class="container">
                <div class="row">
                    <div id="header-logo" class="col-sm-5 col-md-6">
                        <a href="{{ path('homepage') }}">
                            <img src="{{ asset('bundles/app/img/header-logo.svg') }}" alt="Symfony" class="img-responsive">
                        </a>
                    </div>
                    <div id="header-download" class="col-sm-7 col-md-6">
                        <a
                            href="http://sensiolabs.com/"
                            class="header-sensiolabs-product"
                            title="SensioLabs, PHP services and software solutions for enterprise and community."
                            target="_blank" rel="nofollow">
                            <img src="{{ asset('bundles/app/img/slproduct.svg') }}" alt="a SensioLabs product">
                        </a>
