                            {% for post in posts %}
                            <li>
                                <h3>
                                    <a
                                        href="{{ path('post-model', {'slug': post.slug}) }}">
                                        {{ post.title }}
                                        <span class="place_date">{{ post.createdAt|date('d \\d\\e M \\d\\e Y') }}</span>
                                    </a>
                                </h3>
                            </li>
                            {% endfor %}
                        </ul>

                        <div class="read-more link_01">
