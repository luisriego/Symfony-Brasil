                            <option value="symfony/property-access">symfony/property-access</option>
                            <option value="symfony/property-info">symfony/property-info</option>
                            <option value="symfony/routing">symfony/routing</option>
                            <option value="symfony/security">symfony/security</option>
                            <option value="symfony/serializer">symfony/serializer</option>
                            <option value="symfony/stopwatch">symfony/stopwatch</option>
                            <option value="symfony/templating">symfony/templating</option>
                            <option value="symfony/translation">symfony/translation</option>
                            <option value="symfony/validator">symfony/validator</option>
                            <option value="symfony/var-dumper">symfony/var-dumper</option>
                            <option value="symfony/yaml">symfony/yaml</option>
